<!-- products.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.2/css/fontawesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        integrity="sha384-GLhlTQ8iKt99UqNlSpnEGFLt12PWQr0NTOFN/FVEBRjUnIISZsODetFfnYd+qL2" crossorigin="anonymous">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <title>RedStore | Ecommerce Website Design</title>
</head>

<body>
    <div class="small-container">
        <h2>Featured Products</h2>
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-4">
                    <div class="card">
                        <img src="<%= product.image %>" alt="Product Image">
                        <h4 class="title"><%= product.title %> Red Printed T-shirt</h4>
                        <div class="price">Price: <strong><%= product.price %></strong></div>
                        <p>Details about the product go here.</p>
                        <form method="post" action="/cart">
                            <button onclick="addToCart('<%= product.id %>')">Add to Cart</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>

</html>
